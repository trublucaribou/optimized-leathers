<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<!-- Change Erin's Critters Animals -->

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Erin.Critters</li>
       </mods>
       <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName = "Fisher"]/race/leatherDef</xpath>
         <value>
            <leatherDef>Leather_SoftFur</leatherDef>
         </value>
       </match>
   </Operation>

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Erin.Critters</li>
       </mods>
       <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName = "Greyfox"]/race/leatherDef</xpath>
         <value>
            <leatherDef>Leather_LongFur</leatherDef>
         </value>
       </match>
   </Operation>

   <Operation Class="PatchOperationFindMod">
       <mods>
           <li>Erin.Critters</li>
       </mods>
       <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName = "Armadillo"]/race/leatherDef</xpath>
         <value>
            <leatherDef>Leather_Sturdy</leatherDef>
         </value>
       </match>
   </Operation>


</Patch>
